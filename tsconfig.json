{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2020",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strict": true,
    "removeComments": true,
    "allowJs": false,
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["ES2020"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "**/*.spec.ts",
    "src/__tests__"
  ]
}
